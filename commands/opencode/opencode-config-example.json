{
  "$schema": "https://opencode.ai/config.json",

  "mcp": {
    "plan-bridge": {
      "type": "local",
      "command": [
        "node",
        "/absolute/path/to/plan-bridge-mcp/build/index.cjs"
      ]
    }
  },

  "command": {
    "plan-bridge:get-plan": {
      "description": "Retrieve a plan from plan-bridge and implement it",
      "template": "< paste contents of commands/opencode/plan-bridge:get-plan.md here >"
    },
    "plan-bridge:claude-review": {
      "description": "Get review findings from Claude Code and fix them (auto-loops)",
      "template": "< paste contents of commands/opencode/plan-bridge:claude-review.md here >"
    },
    "plan-bridge:mark-done": {
      "description": "Force-mark a plan as completed",
      "template": "< paste contents of commands/opencode/plan-bridge:mark-done.md here >"
    }
  }
}
